<h1>Users#new</h1>

<%if @user.errors.any?%>
<% @user.errors.messages.each do |m|%>
<%= m%>
<%end%>
<%end%>

<%= form_for @user do |user|%>
<%=user.label :name %>
<%= user.text_field :name%><br>
<%= user.label :email%>
<%= user.text_field :email%><br>
<%= user.label :password%>
<%= user.text_field :password%><br>
<%= user.submit "Join"%>
<% end %>

